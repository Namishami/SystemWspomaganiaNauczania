@model SystemWspomaganiaNauczania.Models.Profile

@{
    ViewBag.Title = "Mój profil";
}
<h2>Twój profil</h2>

<div>

    <hr />
    <div class="dl-horizontal row">
        <div class="col-sm-4">

            @if (Model.Image != null && Model.Image != "")
            {
                <img src="~/Images/@Model.Image" alt="Zdjęcie profilowe" style="max-width:100%">
            }
            else
            {
                <img src="~/Images/brak-zdjecia.png" alt="Zdjęcie profilowe" style="width: 100%;">
            }
        </div>

        <div class="col-md-4" style=" margin-top:10%;">
            <h4>
            <dt>
                @Html.DisplayNameFor(model => model.Email):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                Imię:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt>
                Nazwisko:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>
            </h4>
        </div>
        <div class="buttons">
            <a href="/Profiles/Edit/@Model.ID"><button class="btn btn-primary">Edytuj profil</button></a>
            @if (User.Identity.Name == Model.Email)
            {
                <a href="/Manage/ChangePassword"><button class="btn btn-primary">Zmień hasło</button></a>
            }
            <a href="/Profiles/OrderTaskSolved/@Model.ID"><button class="btn btn-primary">Statystyki</button></a>
        </div>
    </div>
</div>


